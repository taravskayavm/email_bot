BOT_WEBHOOK_CERT=
BOT_WEBHOOK_PRIV=

#########################################
# Источники данных для рассылок
#########################################
DATA_SOURCES_PATH=
DATA_SOURCES_DIR=
DATA_SOURCES_LABEL=

#########################################
